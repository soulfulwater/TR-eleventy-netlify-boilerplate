---
layout: layouts/base.njk
section: home
---

<!-- start header -->
<header class="lg:block absolute w-full  z-50 top-0">
    <div class="px-8 mx-auto" style="max-width: 1200px;">
        <nav class="hidden lg:flex flex-wrap items-center justify-between px-2 navbar-expand-lg left-0 top"
             style="padding: 0;">
            <div class="mx-auto flex flex-wrap items-center justify-between w-full">
                <div class="relative flex justify-between w-auto static block justify-start">
                    <a class="relative z-50 inline-block mr-4 py-2 whitespace-no-wrap" href="#" style="padding: 0;">
                        <img src="{{ site.logo }}" alt="" style="height: 125px; object-fit: contain;">
                    </a>
                </div>
                <div class="flex-grow items-center flex">
                    <ul class="flex flex-col md:flex-row list-none md:ml-auto space-y-4 md:space-y-0 md:space-x-6 lg:space-x-10  items-center pt-8 pb-4 md:pt-8 md:pb-4">
                        {% for item in menu.menuList | sortByOrder %}
                        <li>
                            <a href="{{ item.link }}"
                               class="text-xs_lllg font-semibold capitalize leading-5 text-white font_poppins hover:text-btn duration-300">
                                {{ item.text }}
                            </a>
                        </li>
                        {% endfor %}
                    <li>
                            <a href="{{ menu.button.link }}"
                               class="ml-4 text-white inline-block bg-btn font-normal tracking-xxl_nomrmal border-transparent border-solid border-3  font_sans py-3 px-6 outline-none font_poppins hover:bg-hover_btn  duration-300">
                                <span class="mr-1 inline-block"><i class="far {{ menu.button.icon }}"></i></span>
                                {{ menu.button.text }}
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav><!-- flex-wraper -->
        <nav class="flex lg:hidden flex-wrap items-center justify-between px-2 navbar-expand-lg left-0 top "
             style="padding: 0;">
            <div class="mx-auto  w-full flex flex-wrap items-center justify-between">
                <div
                        class="w-full relative flex justify-between items-center lg:w-auto lg:static lg:block lg:justify-start">
                    <a class="relative z-50 inline-block mr-4 py-2 whitespace-no-wrap" href="#">
                        <img src="{{ site.image }}" alt="" style="max-width: 100px;">
                    </a>
                    <div class="flex items-center">
                            <span class="text-white inline-block text-xs_xl" type="button" id="mobile-menu">
                                <i class="fas fa-bars"></i>
                            </span>
                        <a href="#"
                           class="ml-10 hidden md:block text-white inline-block bg-btn font-normal tracking-xxl_nomrmal border-transparent border-solid border-3  font_sans py-3 px-6 outline-none font_poppins hover:bg-hover_btn  duration-300">
                            <span class="mr-1 inline-block"><i class="far fa-calendar-alt"></i></span>
                            book a free call
                        </a>
                    </div>
                </div>
                <div class="mobile-toogle flex-grow items-center hidden bg-primary">
                    <ul
                            class="flex flex-col lg:flex-row list-none lg:ml-auto space-y-4 md:space-y-0 lg:space-x-4 xl:space-x-8 items-center py-4">
                        <li class="block w-full text-center">
                            <a href="#"
                               class="block py-4 text-xs_lllg font-semibold capitalize leading-5 text-white font_poppins hover:text-btn transition-all"
                               style="border-bottom: 1px solid rgba(132, 132, 132, 0.15);">
                                How We Can Help
                            </a>
                        </li>
                        <li class="block w-full text-center">
                            <a href="#"
                               class="block  py-4 block text-xs_lllg font-semibold capitalize leading-5 text-white font_poppins hover:text-btn transition-all"
                               style="border-bottom: 1px solid rgba(132, 132, 132, 0.15);">about</a>
                        </li>
                        <li class="block w-full text-center">
                            <a href="#"
                               class="block py-4 block text-xs_lllg font-semibold capitalize leading-5 text-white font_poppins hover:text-btn transition-all"
                               style="border-bottom: 1px solid rgba(132, 132, 132, 0.15);">
                                Services
                            </a>
                        </li>
                        <li class="block w-full text-center">
                            <a href="#"
                               class="block py-4 block text-xs_lllg font-semibold capitalize leading-5 text-white font_poppins hover:text-btn transition-all">Testimonials</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav><!-- flex-wraper -->
    </div>
</header>
<!-- End header  -->

<!-- hero section -->
<section class="relative h-h_screen lg:h-h_auto">
    <div class="absolute bg-white opacity-85 inset-0 h-h_full w-full bg-overlay"></div>
    <div class="relative xs-video hidden lg:block">
        <iframe id="aspectRatio" class=" modest-vid-embed__item "
                src="https://www.youtube.com/embed/XDJwqNHYtfs?mute=1&autoplay=1&modestbranding=1&loop=1&rel=0&amp;controls=0&amp;showinfo=0&playlist=XDJwqNHYtfs"
                frameborder="0" allowfullscreen>
        </iframe>
    </div>

    <div class="lg:hidden h-h_screen">
        <img class="h-h_screen w-full object-cover object-center" src="assets/images/thumbnails.png" alt="">
    </div>
    <div class="container mx-auto px-4 xl:px-8 absolute  w-full xl:w-10/12 mx-auto"
         style="left: 0; right: 0; top: 50%; transform: translateY(-50%); max-width: 1140px;">
        <div class="text-center pt-20 lg:pt-16">
            <h2
                    class="text-xs_2xxl md:text-xs_4xl text-white font-bold  font-bold tracking-xxl_tight mb-6 leading-none">
                {{ hero.headline }}
            </h2>
            <h4
                    class="two_half font-extralight text-xs_ssm md:text-xs_2xxl text-white leading-tight mb-6 tracking-two_half uppercase">
                {{ hero.subheader }}
            </h4>
        </div>

    </div>

</section>
<!-- hero section -->


<!-- about section -->
<div class="bg-sec_primary pt-0 md:pt-32  lg:pt-0 pb-20 ">
    <div class="container px-6 xl:px-8 w-10/12" style="max-width: 1120px;">
        <div class="relative -mt-12 lg:-mt-0 md:grid grid-cols-1 md:grid-cols-3 md:gap-6 lg:gap-10">
            <!-- items -->
            <div class="lg:-mt-12 mb-8">
                <div class="p-7 bg-primary">
                    <div class="text-right text-white mb-4 text-xs_xl">
                        <i class="fas {{ benefits.b1.icon }}"></i>
                    </div>
                    <h4 class="text-white font-normal font_poppins text-xs_lllg leading-6 mb-6  ">
                        {{ benefits.b1.textBlock }}
                    </h4>
                    <a href="{{ benefits.b1.cta.link }}" class="underline font-bold text-white text-xs-llg">
                        {{ benefits.b1.cta.text }}
                    </a>
                </div>
            </div>
            <!-- items -->
            <div class="lg:-mt-12 mb-8">
                <div class="p-7 bg-primary">
                    <div class="text-right text-white mb-4 text-xs_xl">
                        <i class="fas {{ benefits.b2.icon }}"></i>
                    </div>
                    <h4 class="text-white font-normal font_poppins text-xs_lllg leading-6 mb-6  ">
                        {{ benefits.b2.textBlock }}
                    </h4>
                    <a href="{{ benefits.b2.cta.link }}" class="underline font-bold text-white text-xs-llg">
                        {{ benefits.b2.cta.text }}
                    </a>
                </div>
            </div>
            <!-- items -->
            <div class="lg:-mt-12 mb-8">
                <div class="p-7 bg-primary">
                    <div class="text-right text-white mb-4 text-xs_xl">
                        <i class="fas {{ benefits.b3.icon }}"></i>
                    </div>
                    <h4 class="text-white font-normal font_poppins text-xs_lllg leading-6 mb-6">
                        {{ benefits.b3.textBlock }}
                    </h4>
                    <a href="{{ benefits.b3.cta.link }}" class="underline font-bold text-white text-xs-llg">
                        {{ benefits.b3.cta.text }}
                    </a>
                </div>
            </div> <!-- end items -->
        </div><!-- end content wrapper -->
    </div><!-- end container -->
</div>
<!--/ end about section -->


<!-- HOW WE CAN HELP AREA -->
<div id="what-we-do" class="flex flex-wrap items-center md:pt-0 md:pb-24 lg:py-24 clearfix">
    <div class="lg:flex items-center">
        <div class="relative w-full lg:w-6/12 mb-1 mb-12 md:mb-0">
            <div class="pl-0 lg:pl-12">
                <img src="{{ whatwedo.image }}" alt=""
                     class="object-cover object-center w-full md:h-xs_sm">
            </div>
        </div><!-- images -->
        <div class="ml-auto lg:w-6/12">
            <div class="pb-12 md:py-12 2xl:py-10 lg:px-10 xl:px-16 2xl:px-28">
                <div class="mb-6  px-12">
                    <h2
                            class="text-center md:text-left tracking-xxl_nomrmal text-xs_3xl lg:text-xs_3xxl text-primary font-bold leading-none	mb-6 uppercase">
                        {{ whatwedo.title }}
                    </h2>
                    <p class="text-xs-lg text-gray_400 font-normal leading-normal font_sans mb-4">
                        {{ whatwedo.leadingText | safe }}
                    </p>
                </div>
                <div class="px-12">
                    {% for item in whatwedo.infoList %}
                        <div class="text-center md:text-left md:flex {% if loop.last %}mb-12{% else %}mb-5{% endif %}">
                            <span class="md:mr-4 text-primary text-xs_xl">
                                <i aria-hidden="true" class="fas {{ item.icon }}"></i>
                            </span>
                            <div class="mt-3">
                                <h3 class="text-xs-llg font-medium leading-tight text-gray_500 font_poppins mb-3">
                                    {{ item.title }}
                                </h3>
                                <p class="text-xs-lg text-gray_400 font-normal leading-normal font_sans">
                                    {{ item.text }}
                                </p>
                            </div>
                        </div>
                    {% endfor %}
                    <a href="{{ whatwedo.cta.link }}"
                       class="block w-full text-center md:w-auto md:inline-block mt-6 md:mt-0 text-btn inline-block bg-transparent font-bold tracking-xl_tight border-btn border-solid border-3  uppercase  font_sans py-2 px-6 outline-none hover:text-hover_text hover:border-hover_btn duration-300">
                        {{ whatwedo.cta.text }}
                    </a>
                </div>
            </div>
        </div><!-- content wrapper -->
    </div>
</div>
<!--/End HOW WE CAN HELP area -->

<!-- founder wrapper -->
<div id="about" class="bg-founder">
    <div class="flex flex-wrap items-center  mx-auto">
        <div class="w-full md:w-6/12 md:mb-0">
            <div class="hidden lg:block py-20 2xl:py-10 px-12 lg:px-16 xl:px-32">
                <div class="text-center mb-8">
                    <h3 class="text-xs_2xl text-primary  font-bold mb-6 uppercase tracking-md_tight leading-none ">
                        {{ about.title }}
                    </h3>
                    <h4 class="font-semibold text-primary text-xs_xl leading-none font_poppins">{{ about.subtitle }}</h4>
                </div>
                <p class="text-xs-lg text-gray_400 font-normal leading-normal font_sans mb-4">
                    {{ about.text | safe }}
                </p>
            </div>
        </div>
        <div class="w-full ml-auto lg:w-6/12 ">
            <div class="relative pt-16 md:pt-0 px-8 md:px-0 lg:pr-12">
                <img class="relative opacity-80	w-full" src="{{ about.sideImage }}">
            </div>
            <div class="lg:hidden py-10 2xl:py-10 px-8 xl:px-28">
                <div class="text-center mb-8">
                    <h3
                            class="text-xs_xl md:text-xs_2xl text-primary  font-bold mb-6 uppercase tracking-md_tight leading-none ">
                        {{ about.title }}
                    </h3>
                    <h4 class="font-semibold text-primary text-xs_xl leading-none font_poppins">{{ about.subtitle }}</h4>
                </div>
                <p class="text-xs-lg text-gray_400 font-normal leading-normal font_sans mb-4">
                    {{ about.text | safe }}
                </p>
            </div>
        </div>
    </div>
</div>
<!-- founder wrapper -->

<!-- helping section -->
<div id="services" class="py-16 md:py-20 lg:py-20 bg-primary relative">
    <div class="absolute bg-white opacity-50 inset-0 w-full h-full"></div>
    <div class="container px-6 xl:px-8 relative" style="max-width: 1270px;">
        <div class="text-center">
            <h2
                    class="tracking-lg_tight text-xs_3xl lg:text-xs_3xxl text-white font-bold leading-normal mb-8 lg:mb-20 uppercase">
                {{ services.title }}
            </h2>
        </div>
        <div class="mx-auto w-full lg:px-8">
            <div class="lg:flex lg:flex-wrap items-center mx-auto">
                {% for item in services.servicesList %}
                    <div class="w-full lg:w-6/12 mb-6 md:mb-10">
                        <div class="px-5">
                            <div class="xs-box1 w-full mx-auto relative bg-cover px-5  py-6 md:px-16 xl:px-20 md:py-16 xl:py-24 bg-no-repeat bg-center object-center  object-cover"
                                 style="background-image: url({{ item.image }}) ; ">
                                <div class="py-12 px-12  xl:py-16  xl:px-12" style="background-color: #004AADDE;">
                                    <h3
                                            class="tracking-mmd_tight text-center text-sec_primary leading-none text-xs_xxl font-semibold font_poppins mb-3">
                                        {{ item.title }}
                                    </h3>
                                    <p class="text-white font_sans text-xs_md text-normal leading-normal">{{ item.text }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
<!-- helping section -->

<!-- get plan section -->
<div class="py-10 md:py-20 lg:py-32">
    <div class="container px-6 xl:px-8" style="max-width: 850px;">
        <div class="text-center mx-auto">
            <h2
                    class="tracking-xxl_nomrmal leading-tight text-xs_3xl lg:text-xs_3xxl text-primary font-bold	mb-3 uppercase">
                {{ calltoaction.title }}
            </h2>
        </div>
        <div class="text-center">
            <p class="text-primary font_sans text-xs_md font-light mb-12 tracking-xl_tight leading-none	">
                {{ calltoaction.subtitle }}
            </p>
            <a href="{{ calltoaction.button.link }}"
               class="block w-full md:w-auto  text-btn md:inline-block bg-transparent font-bold tracking-xl_tight leading-normal border-btn border-solid border-3  uppercase  font_sans py-2 px-6 outline-none">
                {{ calltoaction.button.text }}
            </a>
        </div>
    </div><!-- end container -->
</div>
<!-- get plan section -->

<!-- testimonial -->
<div id="testimonials" class="bg-sec_primary py-16 md:py-20">
    <div class="container px-6 xl:px-8" style="max-width: 1200px;">
        <div class="text-center">
            <h2
                    class="tracking-lg_tight text-xs_3xl lg:text-xs_3xxl text-primary font-bold leading-normal mb-8	lg:mb-14 uppercase">
                {{ testimonials.title }}
            </h2>
        </div>
        <div class="testimonial-slider owl-carousel">
            {% for item in testimonials.testimonialList %}
                <div class="bg-white rounded-lg px-8 py-8">
                    <p class="tracking-md_tight text-gray_300 text-xs_ssm font-normal  font_sans leading-7 mb-4">{{ item.text }}</p>
                    <p class="text-primary text-xs_sssm font-bold font_sans">{{ item.name }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
<!-- testimonial -->

<!-- contact section -->
<div id="contact" class="bg-primary py-16 md:py-20 lg:pt-24 lg:pb-28 relative">
    <div class="absolute bg-white opacity-50 inset-0 w-full h-full"></div>
    <div class="container px-6 xl:px-8 xl:w-11/12 relative" style="max-width: 1200px;">
        <div class="flex flex-wrap items-end">
            <div class="mb-8 md:mb-0 w-full md:w-5/12 pt-8 md:px-6 lg:mt-2">
                <h3 class="text-footer text-xs_cnt font-medium uppercase text-center mb-10">CONTACT INFO</h3>
                <div class="flex-shrink-0 bg-white relative  px-4 lg:px-14 py-20">
                    <div class="md:flex  text-center md:text-left mb-10">
                        <a href="tel:{{ contact.phone }}" class="inline-block ">
                                <span class="text-primary md:mr-4 text-xs_xl">
                                    <i aria-hidden="true" class="fas fa-phone"></i>
                                </span>
                        </a>
                        <div>
                            <h4 class="font-semibold text-xs_xxxl text-footer font_poppins mb-2 ">Phone</h4>
                            <a href="tel:{{ contact.phone }}"
                               class="text-gray_400 text-xs-lgg  font_poppins font-normal ">
                                {{ contact.phone }}
                            </a>
                        </div>
                    </div>
                    <div class="md:flex  text-center md:text-left mb-10">
                        <a href="mailto:{{ contact.email }}" class="inline-block ">
                                <span class="text-primary md:mr-4 text-xs_xl">
                                    <i aria-hidden="true" class="fas fa-envelope"></i>
                                </span>
                        </a>
                        <div>
                            <h4 class="font-semibold text-xs_xxxl text-footer font_poppins mb-2 ">Email Address
                            </h4>
                            <a href="mailto:{{ contact.email }}"
                               class="text-gray_400 text-xs-lgg  font_poppins font-normal ">
                                {{ contact.email }}
                            </a>
                        </div>
                    </div>
                    <div class="md:flex text-center md:text-left mb-10">
                        <a href="mailto:{{ contact.email }}" class="inline-block md:mr-4">
                                <span class="text-primary md:mr-4 text-xs_xl">
                                    <i aria-hidden="true" class="fas fa-home"></i>
                                </span>
                        </a>
                        <div>
                            <h4 class="font-semibold text-xs_xxxl text-footer font_poppins mb-2 ">Office
                            </h4>
                            <p class="text-gray_400 text-xs-lgg  font_poppins font-normal ">
                                {{ contact.address }}
                            </p>
                        </div>
                    </div>

                </div>
            </div>
            <div class="w-full md:w-7/12 md:px-6">
                <h3 class="text-footer text-xs_cnt font-medium uppercase text-center mb-10">
                    DROP US A MESSAGE
                </h3>
                <div class="bg-cnt p-8 lg:p-12">
                    <!-- component -->
                    <form class="" action="{{ site.formUrl }}">
                        <div class="flex flex-wrap -mx-3 mb-6">
                            <div class="w-full lg:w-1/2 px-3 mb-6">
                                <label class="text-white font-500 text-xs_lllg font_poppins mb-1 block">Name</label>
                                <input name="name"
                                       class="input border-2 border-solid	 border-transparent px-4 appearance-none block w-full bg-white text-primary border-b border-brGray pt-2 pb-2 focus:outline-none focus:outline-none  font_poppins"
                                       type="text">
                            </div>
                            <div class="w-full lg:w-1/2 px-3 mb-6 ">
                                <label class=" text-white font-500 text-xs_lllg font_poppins mb-1 block">
                                    Email
                                </label>
                                <input name="email"
                                       class="input border-2 border-solid	 border-transparent px-4 appearance-none block w-full bg-white text-primary border-b border-brGray pt-2 pb-2 focus:outline-none focus:outline-none	font_poppins"
                                       type="email">
                            </div>

                            <div class="w-full lg:w-2/2 px-3">
                                <label
                                        class="text-white border-2 border-solid	 border-transparent font-500 text-xs_lllg font_poppins mb-1 block">
                                    Message
                                </label>
                                <textarea name="message"
                                          class="input no-resize px-4 appearance-none block w-full bg-white text-primary  border-b border-brGray rounded pt-3 pb-5 mb-6 leading-tight focus:outline-none h-sm resize-none"
                                          id="message"></textarea>
                            </div>
                            <input
                                    type="checkbox"
                                    name="key_info"
                                    style="display:none"
                                    tabindex="-1"
                                    autocomplete="off"
                            />
                            <div class="w-full lg:w-2/2 px-3">
                                <div class="text-right ">
                                    <button
                                            class="jk-btn w-full py-4 tracking-xl_tight uppercase font_poppins font-bold text-white"
                                            type="submit">
                                        Send
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form><!-- from wrapper -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- contact section -->

<!-- google map -->
<div class="">
    <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d63967.68230967708!2d-1.0617150774758142!3d53.42889585050573!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4879087e76639909%3A0x5b7b8de98f60fe7c!2sS%20Parade%2C%20Bawtry%2C%20Doncaster%20DN10%206JH%2C%20UK!5e0!3m2!1sen!2sbd!4v1613797811281!5m2!1sen!2sbd"
            width="100%" height="600" style="border:0;" allowfullscreen="" loading="lazy">
    </iframe>
</div>
<!-- End google map -->


<!-- footer -->
<footer class="pt-20 md:pt-28 xl:pt-44 pb-12  md:pb-16 bg-footer">
    <div class="container  px-6 xl:px-8" style="max-width: 1000px;">
        <div class="mx-auto">
            <div class="text-center mb-12 lg:mb-20">
                <p class="text-xs_ssm text-gray_100 font-normal mb-4 font_sans">{{ disclaimer.text | safe }}</p>

            </div>
        </div>
    </div><!-- container -->
    <div class="container  px-6 xl:px-8" style="max-width: 1200px;">
        <div class="text-center md:flex justify-between">
            <p class="text-xs_ssm text-white font-normal font_sans mb-4 md:mb-0">
                &copy{{ site.year }} {{ site.businessName }}
            </p>
            <div>
                <a href="{{ contact.facebook }}" class="text-white">
                    <i class="fab fa-facebook-f"></i>
                </a>
            </div>
        </div>
    </div>
    <!-- end copyright -->
</footer>
<!-- footer -->